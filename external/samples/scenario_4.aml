INIT STATE off

ANALOG SENSOR btn 9
DIGITAL ACTUATOR led 10
DIGITAL ACTUATOR buzzer 11

STATE off {
    led = OFF
    btn == ON => STATE only_buzzer
}

STATE only_buzzer {
    buzzer = ON
    btn == ON => STATE only_led
}

STATE only_led {
    buzzer = OFF
    led = ON
    btn == ON => STATE off
}