INIT STATE double_door

ANALOG SENSOR radio_button 1

DIGITAL ACTUATOR led_2 10
ANALOG ACTUATOR led 9

STATE double_door {
    led = radio_button

    radio_button >= 500 => STATE enable_led
    radio_button <= 500 => STATE dead_led
}

STATE dead_led {
    led_2 = OFF
    => STATE double_door
    }

STATE enable_led {
    led_2  = ON
    => STATE double_door
}