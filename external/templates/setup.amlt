

boolean guard;
void error(int n)
{{
    for(int c = 0 ; c != n ; c++)
    {{
        digitalWrite(12, HIGH);
        delay(200);
        digitalWrite(12, LOW);
        delay(200);
    }}
    delay(200 * n);
    error(n);
}}

String prettyDigitalRead(String name, int value)
{{
    if (value == 0)
    {{
        return (name + " := ON");
    }}
    return (name + " := OFF");
}}

String prettyAnalogPrint(String name, float value)
{{
    return (name + " := "+ value);
}}

void setup()
{{{setup_code}

    // Used for Exceptions
    pinMode(12, OUTPUT);
}}
